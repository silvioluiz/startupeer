<section>

    <div class="row">
        <div class="col-md-6">
            <h1><%= @project.name %></h1>
            <dl class="dl-horizontal">
                <dt>Criador:</dt>
                <dd><%= @project.user %></dd>
                <dt>Categoria:</dt>
                <dd><%= @project.category.name %></dd>
                <dt>Localização:</dt>
                <dd><%= @project.location %></dd>
                <dt>Estágio:</dt>
                <dd><%= @project.stage %></dd>
                <dt>Rede social:</dt>
                <dd><%= @project.main_social %></dd>
            </dl>

            <div>
                <h2>Descrição</h2>
                <p>
                    <%= @project.description %>
                </p>
            </div>
            <div>
                <h2>O que Procuro?</h2>
                <p>
                    <%= @project.looking_for %>
                </p>
            </div>
        </div>
        <div class="col-md-6">
            <%= image_tag  @project.media_url, class: "img-responsive" %>
        </div>
    </div>
    <% if current_user.is_member_of?(@project) %>
    <%= link_to "Quero fazer parte", members_project_path(@project), class: "btn btn-primary", method: :POST %>
    <% end %>
    <%= link_to "Ver outros projetos", root_path, class: "btn btn-primary" %>
</section>
