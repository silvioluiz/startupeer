<section>

    <div class="row">
        <div class="col-md-6">
            <h1><%= @project.name %></h1>
            <dl class="dl-horizontal">
                <dt>Criador:</dt>
                <dd><%= @project.owner.email %></dd>
                <dt>Categoria:</dt>
                <dd><%= @project.category.name %></dd>
                <dt>Localização:</dt>
                <dd><%= @project.location %></dd>
                <dt>Estágio:</dt>
                <dd><%= @project.stage %></dd>
                <dt>Rede social:</dt>
                <dd><%= @project.main_social %></dd>
            </dl>

            <div>
                <h2>Descrição</h2>
                <p>
                    <%= @project.description %>
                </p>
            </div>
            <div>
                <h2>O que Procuro?</h2>
                <p>
                    <%= @project.looking_for %>
                </p>
            </div>
        </div>
        <div class="col-md-6">
            <%= image_tag  @project.media_url, class: "img-responsive" %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <% if user_signed_in? %>
              <% unless current_user.member_of?(@project) %>
              <%= link_to "Quero fazer parte", members_project_path(@project),
                    class: "btn btn-primary", method: :POST %>
              <% end %>
            <% else %>
              <%= link_to "Quero fazer parte", new_user_registration_path,
                class: "btn btn-primary" %>
            <% end %>
            <%= link_to "Ver outros projetos", root_path,
                class: "btn btn-primary" %>
        </div>
        <div class="members col-md-6">
            <h3>Participantes do Projeto</h3>
            <ul class="list-unstyled">
                <% @project.users.each do |user| %>
                <li><%= user.email %></li>
                <% end %>
            </ul>
        </div>
    </div>
</section>
