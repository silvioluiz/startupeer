<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <section>
    <% if @project %>
        <div id="main-project">
          <div class="thumbnail">
            <%= image_tag @project.media_url, class: 'img-responsive'%>
              <div class="caption">
                <h1><%= @project.name %>, <%= @project.location %></h1>
                <dl>
                  <dt>Categoria</dt>
                  <dd><p><%= @project.category.name %></p></dd>
                  <dt>Descrição</dt>
                  <dd><p><%= @project.description %></p></dd>
                </dl>
                <p class="text-center">
                  <%= link_to @project, class: 'btn btn-success btn-lg' do %>
                    <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                    Gostei
                  <% end %>
                  <%= link_to root_path, class: 'btn btn-default btn-lg' do %>
                    <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
                    Não gostei
                  <% end %>
                </p>
                
             </div>   
           </div>     
        </div>
      <% else %>
        <div id="projects-empty">
            <p> Que tal ser o primeiro a criar um projeto? </p>
            <%= link_to 'Criar projeto', new_project_path, class: 'btn btn-default' %>
        </div>
      <% end %>
    </section>
  </div>
</div>

<hr/>

<footer>
<div class="row text-center bg-light-gray">
        <% @categories.each do |category| %>
                <div class="col-md-4">
<%= link_to category do %>
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-list fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading"><%= category.name %></h4>

                    <% end %>
                </div>
       <% end %>                
  </div>
</footer>
