<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <section>
    <% if @project %>
        <div id="main-project">
          <h1><%= @project.name %></h1>
          <p><%= @project.location %></p>
          <p><%= @project.description %></p>
          <p>
            <%= image_tag @project.media_url, class: 'img-responsive'%>
          <p class="text-center">
            <%= link_to @project, class: 'btn btn-success btn-lg' do %>
              <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
              Gostei
            <% end %>
            <%= link_to root_path, class: 'btn btn-default btn-lg' do %>
              <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
              NÃ£o gostei
            <% end %>
          </p>
        </div>
      <% else %>
        <div>
          <%= link_to 'Criar projeto', new_project_path, class: 'btn btn-default' %>
        </div>
      <% end %>
    </section>
  </div>
</div>
<footer>
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-2">
        <%= link_to category.name, category, class: 'list-group-item' %>
      </div>
    <% end %>
  </div>
</footer>
